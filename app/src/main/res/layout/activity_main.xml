<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/helloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open App"
        app:layout_constraintTop_toBottomOf="@id/helloWorld"
        android:layout_margin="30dp"/>

    <Button
        android:id="@+id/openApp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open App 2"
        app:layout_constraintTop_toBottomOf="@id/openBtn"
        android:layout_margin="30dp"/>

    <Button
        android:id="@+id/openApp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open App 3"
        app:layout_constraintTop_toBottomOf="@id/openApp2"
        android:layout_margin="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>